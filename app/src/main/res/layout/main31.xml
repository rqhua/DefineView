<?xml version="1.0" encoding="utf-8"?>
<com.rqhua.demo.defineview.demo2.CustomeViewGroup1 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:visibility="visible"
    app:bottomheader_height="100dp"
    app:topheader_height="200dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#FFF">

        <ImageView
            android:id="@+id/st_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fifa" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/st_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#FFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:padding="10dp"
            android:text="TEXT-0"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:padding="10dp"
            android:text="TEXT-1"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:padding="10dp"
            android:text="TEXT-2"
            android:visibility="visible" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/st_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl"></android.support.v7.widget.RecyclerView>
</com.rqhua.demo.defineview.demo2.CustomeViewGroup1>