<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008800"
    tools:context="com.rqhua.demo.defineview.SnapHelperActivity">

    <com.rqhua.demo.defineview.scroller.ScrollerDemoView2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#FFF"
        android:orientation="vertical"
        android:visibility="visible"
        app:bottomheader_width="100dp"
        app:topheader_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:id="@+id/st_sticky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="This is third child view"
                android:visibility="visible" />

            <View
                android:id="@+id/st_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary" />


        </RelativeLayout>


        <ScrollView
            android:id="@+id/st_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#FFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#00F" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#FFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#00F" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#FFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#00F" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#FFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#00F" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#FFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#00F" />
            </LinearLayout>

        </ScrollView>
    </com.rqhua.demo.defineview.scroller.ScrollerDemoView2>


    <com.rqhua.demo.defineview.scroller.ScrollerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="This is third child view" />

    </com.rqhua.demo.defineview.scroller.ScrollerLayout>
</RelativeLayout>
